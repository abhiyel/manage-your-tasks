    <center>

      <h3>Login Here</h3>

      <form action="/users/login" method="POST">
        <table>
          <tr>
            <td>Email:</td>
            <td><input
                type="email"
                name="loginemail"
                placeholder="Enter email Here"
              /></td>
          </tr>
          <tr>
            <td>Password:</td>
            <td><input
                type="password"
                name="loginpassword"
                placeholder="Enter Password Here"
              /></td>
          </tr>
          <tr>
            <td>Remember Me</td>
            <td>
              <input type="checkbox" name="rem" value="yes" />
            </td>
          </tr>
          <tr>
            <td><input
                class="button"
                type="submit"
                name="submit"
                value="Login"
              /></td>
            <td><p>New User?
                <a href="/registerationpage">Register</a></p></td>
          </tr>

        </table>
      </form>

    </center>
