  <body>
    <br />
    <br />
    <center><h1 style="font-family: Arial, Helvetica, sans-serif">
        ManageYourTasks - Task Maanager</h1>
    </center>
    <br />
    <br />
    <center>
      <div class="navbar">
        <a href="/users/me">Profile</a>
        <a href="/users/tasks">Your Tasks</a>
        <a href="/users/accountsettings">Account Settings</a>
        <a href="/about">About</a>
      </div>
    </center>
    <br />
    <br />
    <br />
    <center>

      <h3>Register Here</h3>

      <form action="/users" method="POST">
        <table>
          <tr>
            <td>Name:</td>
            <td><input
                type="text"
                name="dname"
                placeholder="Enter name Here"
              /></td>
          </tr>
          <tr>
            <td>Email:</td>
            <td><input
                type="email"
                name="demail"
                placeholder="Enter Email Here"
                required
              /></td>
          </tr>
          <tr>
            <td>Password:</td>
            <td><input
                type="password"
                name="dpassword"
                placeholder="Enter Password Here"
                required
              /></td>
          </tr>
          <tr>
            <td><input type="submit" name="submit" value="submit" /></td>
            <td><p>Already a user? <a href="/loginpage">Login Here</a></p></td>
          </tr>

        </table>
      </form>

    </center>
  </body>
